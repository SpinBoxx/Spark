{% extends 'base.html.twig' %}

{% block title %}Hello FAQController!{% endblock %}

 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('style/faq/autocomplete_field.css') }}"/>
     <link rel="stylesheet" href="{{ asset('style/faq/FAQ.css') }}"/>
 {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="FAQ-title">Service Client</div>
                <div class="form-group has-search">
                    <div class="autoComplete_wrapper" >
                    <input type="search"  id="autoComplete"  class="form-control rounded-pill" placeholder="Une question ?">
                </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="FAQ-title">Th√®mes</div>

            <div class="col-sm-4">
                <div class="card bot-buffer">
                    <div class="card-header">
                        <span class="fa fa-cogs"></span> Questions techniques
                    </div>
                    <div class="card-body">
                        <div class="accordion accordion-flush" id="accordionFlushTech">
                            {% for question in questions.questions_techniques %}
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="flush-heading{{ question.id }}">
                                        <button class="accordion-button collapsed" type="button" data-toggle="collapse" data-target="#flush-{{ question.id }}" aria-expanded="false" aria-controls="flush-{{ question.id }}">
                                            {{ question.question }}
                                        </button>
                                    </h2>
                                    <div id="flush-{{ question.id }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ question.id }}" data-parent="#accordionFlushTech">
                                        <div class="accordion-body">{{ question.reponse }}</div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card bot-buffer">
                    <div class="card-header">
                        <span class="fa fa-search"></span> Produits
                    </div>
                    <div class="card-body">
                        <div class="accordion accordion-flush" id="accordionFlushProduits">
