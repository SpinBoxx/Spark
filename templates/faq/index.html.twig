                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card bot-buffer">
                    <div class="card-header">
                        <span class="fa fa-credit-card"></span> Paiement
                    </div>

                    <div class="card-body">
                        <div class="accordion accordion-flush" id="accordionFlushPaiement">
