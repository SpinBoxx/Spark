{% block body %}
    <script src="https://kit.fontawesome.com/13dc29a021.js" crossorigin="anonymous"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

        *{
            box-sizing: border-box;
        }

        *:focus{
            outline: none;
        }

        body{
            font-family: "Poppins", sans-serif !important;
            color: rgba(0, 0, 0, 0.75);
            margin: 0;
            min-height: 100vh;
            height: 100vh;
        }

        label{
            font-family: "Poppins", sans-serif;
            font-size: 14px;
            color: rgba(0, 0, 0, 0.75);
        }

        input{
            font-weight: 400;
            font-size: 0.9rem;
        }

        h2{
            font-family: "Poppins", sans-serif;
            font-weight: 700;
            font-size: 3rem;
            color: rgba(0, 0, 0, 0.75);
            margin-top: 0;
        }

        .login_section{
            width: 100%;
            height: 100%;
            display: inline-flex;
        }

        .left_login_div{
            width: 130%;
            height: 100%;
            background-color: white;
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
        }

        .left_login_div > img{
            width: 60%;
            height: auto;
        }

        .right_login_div{
            width: inherit;
            height: 100%;
            background-color: rgba(211, 211, 211, 0.4);
            display: flex;
            justify-content: center;
            flex-direction: column;
        }

        .right_login_div h2 {
            margin-bottom: 4rem;
        }

        .right_login_div > section {
            text-align: left;
            margin: 0 12% 0 12%;
            display: flex;
            flex-direction: column;
        }

        .login_input_form{
            display: flex;
            flex-direction: column;
        }

        .login_input_form > input:nth-child(2), .login_input_form > div {
            margin-top: 2rem;
        }

        .login_submit_btn{
            margin-top: 3rem;
            width: 175px;
            height: 50px;
            background-color: #6FCF97;
            border-radius: 6px;
            color: whitesmoke;
            border: none;
            font-family: "Poppins", sans-serif;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .main_link{
            font-family: "Poppins", sans-serif;
            font-weight: 600;
            font-size: 0.8rem;
            color: rgba(0,0,0,0.75);
        }

        .secondary_link{
            font-family: "Poppins", sans-serif;
            font-weight: 400;
            font-size: 0.75rem;
            color: rgba(0,0,0,0.75);
        }

        .right_login_div > section > div {
            margin-top: 0.5rem;
        }

        input[type="checkbox"]{
            margin-left: 0;
            margin-bottom: 0;
            vertical-align: text-top;
        }

        .label_input{
            border-bottom: #CCCCCC solid 1px !important;
            outline: none;
            height: 30px;
            max-width: 400px;
        }

        .label_input > label {
            width: 100%;
        }

        .text_input{
            background-color: transparent;
            border: none;
            margin-left: 10px;
            height: 30px;
            width: 80%;
        }

        .text_input::-webkit-input-placeholder{
            font-family: "Poppins", sans-serif;
            font-weight: 400;
            font-size: 0.9rem;
        }

        section div:last-child{
            margin-top: 3rem !important;
            text-align: end !important;
        }

        i{
            color: rgba(0, 0, 0, 0.75) !important;
            height: 25px !important;
            vertical-align: inherit !important;
            margin: 0 0 5px 0 !important;
        }

        .main_link{
            margin: 0 !important;
        }

    </style>

    <div class="login_section">
        <div class="left_login_div">
            <img src="{{ asset('images/image_login.png') }}">
        </div>
        <div class="right_login_div">
            <section>
                <h2>Connexion</h2>
                <form class="login_input_form">
                    <div class="label_input">
                        <label>
                            <i class="fas fa-user"></i>
                            <input class="text_input" name="user" type="text" placeholder="Pseudo ou email">
                        </label>
                    </div>
                    <div class="label_input">
                        <label>
                            <i class="fas fa-unlock"></i>
                            <input class="text_input" name="password" type="password" placeholder="Mot de passe">
                        </label>
                    </div>
                    <div>
                        <label>
                            <input name="remember_me" type="checkbox">
                            Se souvenir de moi
                        </label>
                    </div>
                    <button class="login_submit_btn" type="submit">Se connecter</button>
                </form>
                <div>
                    <a class="main_link" href="">Créer un compte</a>
                </div>
                <div>
                    <a class="secondary_link" href="">Mot de passe oublié ?</a>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
