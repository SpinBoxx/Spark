{% extends 'base.html.twig' %}

{% block title %}Mes messages{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/messaging.css') }}">
{% endblock %}

{% block body %}
    <h2 class="m-5">Boîte de réception</h2>
    <table class="table table-striped table-hover mx-5"  style="width: 75%">
        <tbody>
            {% for i in 0..5 %}
                <tr>
                    <th scope="row">
                        <a href="#">
                            <img src="{{ asset('images/messages/avatar.png') }}" alt="avatar" class="avatar">
                        </a>
                    </th>
                    <td><a href="#"><h5 class="pt-4 linkDefault">John Doe</h5></a></td>
                    <td><a href="#"><p class="pt-4 linkDefault">Cet acheteur vous a fait une offre !</p></a></td>
                    <td class="pt-4">
                        <img src="{{ asset('images/messages/trash.png') }}" alt="trash" class="trash">
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
